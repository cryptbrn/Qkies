<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".laporan"
    android:background="@drawable/reportbg">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-80dp"
        android:text="LAPORAN PRODUKSI"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:text="Hari ini"
        tools:ignore="HardcodedText,InvalidId"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="55dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:text="Minggu ini"
        tools:ignore="HardcodedText,InvalidId"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="159dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="95dp"
        android:layout_height="80dp"
        android:text="Bulan ini"
        tools:ignore="InvalidId"
        android:layout_marginTop="-80dp"
        android:layout_marginLeft="263dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/search_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:text="Sedang Mencari Data"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal" />


</LinearLayout>